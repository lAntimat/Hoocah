<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:clickable="true"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:foreground="?attr/selectableItemBackground">
        <!--android:background="@drawable/click_bg">-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp">

            <TextView
                android:id="@+id/tvPrice"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/tvDots"
                android:layout_toLeftOf="@+id/tvDots"
                android:layout_toStartOf="@+id/tvDots"
                android:gravity="right|center_vertical"
                android:padding="@dimen/text_padding"
                android:text="300"
                card_view:layout_constraintHorizontal_bias="0.481"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/tvName"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tvPrice"
                android:layout_toLeftOf="@+id/tvPrice"
                android:layout_toStartOf="@+id/tvPrice"
                android:foregroundGravity="left"
                android:gravity="center_vertical|center"
                android:padding="@dimen/text_padding"
                android:text="Адалия"
                card_view:layout_constraintHorizontal_bias="0.481"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView" />

            <com.mikepenz.iconics.view.IconicsButton
                android:id="@+id/tvDots"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="40dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/text_padding"
                android:text="{gmd_more_vert}"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_above="@+id/tvPrice"
                android:layout_centerHorizontal="true"
                android:foregroundGravity="right"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="152dp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>